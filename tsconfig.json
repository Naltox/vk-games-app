{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "build/",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "react",
      "react-dom",
      "nedb",
      "redux",
      "react-redux",
      "redux-thunk",
      "node"
    ],
    "allowJs": true,
    "strictNullChecks": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}